<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="dil.random.MainActivity">

    <!-- Up to 8 textviews displaying random info generated -->
    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:textSize="21sp"
        android:text="Hello World!"
        android:textColor="#000000" />
    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_below="@id/text1"
        android:textSize="21sp"
        android:textColor="#000000" />
    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_below="@id/text2"
        android:textSize="20sp"
        android:textColor="#000000" />
    <TextView
        android:id="@+id/text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_below="@id/text3"
        android:textSize="20sp"
        android:textColor="#000000" />
    <TextView
        android:id="@+id/text5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_below="@id/text4"
        android:textSize="20sp"
        android:textColor="#000000" />
    <TextView
        android:id="@+id/text6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_below="@id/text5"
        android:textSize="20sp"
        android:textColor="#000000" />
    <TextView
        android:id="@+id/text7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_below="@id/text6"
        android:textSize="20sp"
        android:textColor="#000000" />
    <TextView
        android:id="@+id/text8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_below="@id/text7"
        android:textSize="20sp"
        android:textColor="#000000" />
    <!-- Button for Fortune Street -->
    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Fortune Street"
        android:textColor="#FFFFFF"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@drawable/roundstyle"
        android:backgroundTint="@color/colorPrimary"
        android:id="@+id/fortuneButton"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_below="@id/text8"
        android:onClick="fortuneClicked"/>
    <!-- Button for Mario Kart 8 Deluxe -->
    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Mario Kart"
        android:textColor="#FFFFFF"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@drawable/roundstyle"
        android:backgroundTint="@color/colorPrimary"
        android:id="@+id/kartButton"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:layout_below="@id/fortuneButton"
        android:onClick="kartClicked"/>
    <!-- Button for Mario Strikers -->
    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Strikers"
        android:textColor="#FFFFFF"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@drawable/roundstyle"
        android:backgroundTint="@color/colorPrimary"
        android:id="@+id/strikersButton"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:layout_below="@id/kartButton"
        android:onClick="strikersClicked"/>
    <!-- Button for Smash Bros Ultimate -->
    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Smash"
        android:textColor="#FFFFFF"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@drawable/roundstyle"
        android:backgroundTint="@color/colorPrimary"
        android:id="@+id/smashButton"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:layout_below="@id/strikersButton"
        android:onClick="smashClicked"/>
    <!-- Button for Mario Gold Toadstool Tour -->
    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Golf"
        android:textColor="#FFFFFF"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@drawable/roundstyle"
        android:backgroundTint="@color/colorPrimary"
        android:id="@+id/golfButton"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:layout_below="@id/smashButton"
        android:onClick="golfClicked"/>

    <!-- Button for Mario Party 4 and Superstars -->
    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Party"
        android:textColor="#FFFFFF"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@drawable/roundstyle"
        android:backgroundTint="@color/colorPrimary"
        android:id="@+id/partyButton"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:layout_below="@id/golfButton"
        android:onClick="partyClicked"/>
    <!-- Button for choosing which game to play -->
    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Game"
        android:textColor="#FFFFFF"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@drawable/roundstyle"
        android:backgroundTint="@color/colorPrimary"
        android:id="@+id/gameButton"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:layout_below="@id/partyButton"
        android:onClick="gameClicked"/>
</RelativeLayout>
